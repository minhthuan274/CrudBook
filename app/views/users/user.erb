<div class="col-sm-6 col-sm-offest-2">
	<h2>Hi <%= @user.last_name %>!</h2>
	<a href="/info"><button type="button" class="btn btn-default">Information</button></a>
	<a href="/new_book"><button type="button" class="btn btn-default">Create a new book</button></a>
	<!-- show user's books from @books-->
	<% if @books != nil %>
		<% @books.each do |book| %>
			<li class="list-book">
				<a href="/book/<%= book.id %>"><%= book.title %></a>
				<a href="/book/edit/<%= book.id%>">Edit</a>
			</li>
		<% end %>
	<% else %>
	  <p>You haven't any book. Try create a new one!</p>
	<% end %>
</div>