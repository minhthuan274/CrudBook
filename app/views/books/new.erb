<div class="col-sm-6 col-sm-offset-2">
	<h1>Create a new book</h1>
	<form action="/new_book" method="post" accept-charset="utf-8" enctype="multipart/form-data">
		<!-- title -->
		<div class="form-group">
    	<label for="title" class="col-sm-2 control-label">Title</label>
    	<div class="col-sm-10">
      		<input type="text" class="form-control" placeholder="" name="title">
    	</div>
  	</div>
		
		<div class="form-group">
    	<label for="Author" class="col-sm-2 control-label">Author</label>
    	<div class="col-sm-10">
      		<input type="text" class="form-control" placeholder="" value="<%=@user.last_name %> <%=@user.first_name%>" readonly="true">
    	</div>
  	</div>

  	<div class="form-group">
    	<label for="Publisher" class="col-sm-2 control-label">Publisher</label>
    	<div class="col-sm-10">
      		<input type="text" class="form-control" placeholder="" name="publisher">
    	</div>
  	</div>

  	<div class="form-group">
    	<label for="year" class="col-sm-2 control-label">Year</label>
    	<div class="col-sm-10">
      		<input type="number" class="form-control" placeholder="" name="year">
    	</div>
  	</div>

  		<input type="submit" name="" value="Submit" class="btn btn-default ">

	</form>
</div>